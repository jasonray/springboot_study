<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  Daemon Log4j configuration uses writes to $SNDML_LOG_DIR directory with Rolling File Appender.
  A new log file is created each day (based on the date pattern).
-->
<Configuration>
  <Appenders>
    <RollingFile name="RollingFile"
    	fileName="${sys:sndml.logFolder}/${sys:sndml.logPrefix}-${date:yyyyMMdd}.log"
    	filePattern="${sys:sndml.logFolder}/${sys:sndml.logPrefix}-%d{yyyyMMdd}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d{MM-dd HH:mm:ss} %level %logger{1} [%thread] %marker %X{job}: %msg%n</Pattern>  
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy/>
      </Policies> 
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="RollingFile" />
    </Root>
    <Logger name="sndml" level="info" />
  </Loggers>
</Configuration>